<!DOCTYPE html>
<html>
  <head>
    <title>Add a new restaurant</title>
  </head>

  <body>
    <%= form_for(@restaurant) do |r| %>
      <%= r.label :name %>
      <%= r.text_field(:name) %>
      <%= r.label :address %>
      <%= r.text_field(:address) %>
      <%= r.label :description %>
      <%= r.text_field(:description) %>
      <%= r.submit %>
    <% end %>

  </body>
</html>
